{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "Authority": "https://digitime.eu.auth0.com",
        "ValidAudiences": [ "https://digitime.app" ],
        "ValidIssuer": "https://digitime.eu.auth0.com"
      }
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:32772",
    "DatabaseName": "DigitimeDb",
    "TimesheetsCollectionName": "timesheets",
    "ProjectsCollectionName": "projects"
  },
  "ExternalApis": {
    "PublicHolidaysApi": {
      "Url": "https://date.nager.at/api/v3/PublicHolidays"
    },
    "UserApi": {
      "Url": "https://digitime.eu.auth0.com/api/v2/users/"
    }
  }
}
