    {
        foreach (var entry in _currentDayTimesheetEntries)
        {
            <ProjectRowComponent Name="@entry.Project" ProjectName="@entry.Project" WorkspaceName="ELIA GROUP" Status="Pending" Hours="@entry.Hours" Code="EP-000-687-GH-FFRTY" />
        }
    }
    else
    {
        <WorkerEmptyStateComponent />
    }
</div>





