@using Digitime.Shared.UI.Components.Common
@using Digitime.Shared.UI.Components.Dashboard
@using Microsoft.AspNetCore.Components.Web


<div class="my-12">



    <div class="relative grid grid-cols-1 gap-x-14 lg:gap-x-36 md:grid-cols-2">



        <button type="button" class="absolute -top-1 -left-1.5 flex items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
            <span class="sr-only">Previous month</span>
            <!-- Heroicon name: mini/chevron-left -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
            </svg>
        </button>
        <button type="button" class="absolute -top-1 -right-1.5 flex items-center justify-center p-1.5 text-gray-400 hover:text-gray-500">
            <span class="sr-only">Next month</span>
            <!-- Heroicon name: mini/chevron-right -->
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
            </svg>
        </button>

        <section class="text-center">
            <h2 class="font-semibold text-gray-900">@DateTime.Now.ToString("MMMM")</h2>
            <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
                <div>M</div>
                <div>T</div>
                <div>W</div>
                <div>T</div>
                <div>F</div>
                <div>S</div>
                <div>S</div>
            </div>
            <div class="isolate mt-2 lg:h-96 grid grid-cols-7 gap-px rounded-lg bg-gray-200 text-sm ring-1 ring-gray-200">
                <!--
                  Always include: "py-1.5 hover:bg-gray-100 focus:z-10"
                  Is current month, include: "bg-white text-gray-900"
                  Is not current month, include: "bg-gray-50 text-gray-400"

                  Top left day, include: "rounded-tl-lg"
                  Top right day, include: "rounded-tr-lg"
                  Bottom left day, include: "rounded-bl-lg"
                  Bottom right day, include: "rounded-br-lg"
                -->
                @*<button type="button" class="relative rounded-tl-lg bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
                <!--
                Always include: "mx-auto flex h-7 w-7 items-center justify-center rounded-full"
                Is today, include: "bg-indigo-600 font-semibold text-white"
                -->
                <time datetime="2021-12-27" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">27</time>
                </button>
                <button type="button" class="relative bg-gray-50 py-1.5 text-gray-400 hover:bg-gray-100 focus:z-10">
                <time datetime="2021-12-28" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">28</time>
                </button>*@
                @foreach (var day in _currentMonthCalendarDays)
                {
                    <button type="button"
                        @onclick="() => OnDayClick(day)"
                        class="@(day is null ? "bg-gray-50 text-gray-400" : day.IsPublicHoliday ? "bg-yellow text-yellow-900" : "bg-white text-gray-400")
                           py-1.5  hover:bg-gray-100 focus:z-10">
                        <time datetime="@day?.Date.ToShortDateString()"
                          class="@(day != null && day.WorkedProjects.Any() ? "font-bold text-black" : "" )
                      @(day != null && day.Date == DateTime.Now.Date ? "bg-indigo-600 text-white" : "")
                      mx-auto flex h-7 w-7 items-center justify-center rounded-full">
                            @day?.Date.Day
                        </time>
                    </button>
                }
            </div>
        </section>

        <section class="hidden text-center md:block">
            <h2 class="font-semibold text-gray-900">@DateTime.Now.AddMonths(1).ToString("MMMM")</h2>
            <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
                <div>M</div>
                <div>T</div>
                <div>W</div>
                <div>T</div>
                <div>F</div>
                <div>S</div>
                <div>S</div>
            </div>
            <div class="isolate mt-2 lg:h-96 grid grid-cols-7 gap-px rounded-lg bg-gray-200 text-sm ring-1 ring-gray-200">
                @foreach (var day in _nextMonthCalendarDays)
                {
                    <button type="button"
                        class="@(day is null ? "bg-gray-50 text-gray-400" : day.IsPublicHoliday ? "bg-yellow text-yellow-900" : "bg-white text-gray-900")
                           py-1.5  hover:bg-gray-100 focus:z-10">
                        <time datetime="@day?.Date.ToShortDateString()" class="mx-auto flex h-7 w-7 items-center justify-center rounded-full">
                            @day?.Date.Day
                        </time>
                    </button>
                }
            </div>
        </section>
    </div>


</div>

<div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
    <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
        <div class="ml-4 mt-2">
            <div class="flex">
                <!-- Heroicon name: mini/calendar -->
                <svg class="self-center mr-1.5 h-5 w-5 flex-shrink-0 text-indigo-900" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M5.75 2a.75.75 0 01.75.75V4h7V2.75a.75.75 0 011.5 0V4h.25A2.75 2.75 0 0118 6.75v8.5A2.75 2.75 0 0115.25 18H4.75A2.75 2.75 0 012 15.25v-8.5A2.75 2.75 0 014.75 4H5V2.75A.75.75 0 015.75 2zm-1 5.5c-.69 0-1.25.56-1.25 1.25v6.5c0 .69.56 1.25 1.25 1.25h10.5c.69 0 1.25-.56 1.25-1.25v-6.5c0-.69-.56-1.25-1.25-1.25H4.75z" clip-rule="evenodd" />
                </svg>
                <h1 class="text-xl font-semibold text-indigo-900">@_currentDayTimesheetEntries?.FirstOrDefault()?.Date.ToString("MMMM dd")</h1>
            </div>
            <p class="mt-2 text-sm text-gray-700 flex text-base">
                Your timesheet for this day.
