@using Digitime.Shared.Contracts.Timesheets;
@code {
    [Parameter]
    public TimesheetWorker WorkerData { get; set; }
}

<!-- This example requires Tailwind CSS v2.0+ -->
<div class="overflow-hidden bg-white shadow-sm sm:rounded-md mb-5 mt-5">
    <ul role="list" class="divide-y divide-gray-200 bg-gray-50">
        <li>
            <div href="#" class="block hover:bg-gray-50">
                <div class="flex items-center px-4 py-4 sm:px-6">
                    <div class="flex min-w-0 flex-1 items-center">
                        <div class="flex-shrink-0">
                            <img class="h-12 w-12 rounded-full" src="@WorkerData.ProfilePicture" alt="@WorkerData.Fullname">
                        </div>
                        <div class="min-w-0 flex-1 px-4 md:grid md:grid-cols-2 md:gap-4">
                            <div>
                                <p class="truncate text-sm font-medium text-indigo-600">@WorkerData.Fullname</p>
                                <p class="mt-2 flex items-center text-sm text-gray-500">
                                    <!-- Heroicon name: mini/envelope -->
                                    <svg class="mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                        <path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z" />
                                        <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z" />
                                    </svg>
                                    <span class="truncate">@WorkerData.Email</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <button type="button" class="inline-flex items-center justify-center rounded-md border border-transparent bg-white px-4 py-2 text-sm text-gray-500 shadow-sm hover:bg-[#0DE899] focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto">Validate</button>
                    </div>
                </div>
            </div>
        </li>
    </ul>
    <ul role="list" class="divide-y divide-gray-200">
        @foreach (var entry in WorkerData.TimesheetEntries)
        {
            <li>
                <div href="#" class="block hover:bg-gray-50">
                    <div class="flex items-center px-4 py-4 sm:px-6">
                        <div class="lg:mr-4 p-1 mr-4">
                            <input type="checkbox" @onchange="CheckChanged" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500 sm:left-6">
                        </div>
                        <div class="container px-0 mx-0">
                            <div class="flex items-center justify-between">
                                <p class="truncate text-sm font-medium text-indigo-600">@entry.Project.Title</p>
                                <div class="ml-2 flex flex-shrink-0">
                                    <p class="inline-flex rounded-full bg-green-100 px-2 text-xs font-semibold leading-5 text-green-800">@entry.Status</p>
                                </div>
                            </div>
                            <div class="mt-2 sm:flex sm:justify-between">
                                <div class="sm:flex">
                                    <p class="flex items-center text-sm text-gray-500">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 013.75 9.375v-4.5zM3.75 14.625c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5a1.125 1.125 0 01-1.125-1.125v-4.5zM13.5 4.875c0-.621.504-1.125 1.125-1.125h4.5c.621 0 1.125.504 1.125 1.125v4.5c0 .621-.504 1.125-1.125 1.125h-4.5A1.125 1.125 0 0113.5 9.375v-4.5z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 6.75h.75v.75h-.75v-.75zM6.75 16.5h.75v.75h-.75v-.75zM16.5 6.75h.75v.75h-.75v-.75zM13.5 13.5h.75v.75h-.75v-.75zM13.5 19.5h.75v.75h-.75v-.75zM19.5 13.5h.75v.75h-.75v-.75zM19.5 19.5h.75v.75h-.75v-.75zM16.5 16.5h.75v.75h-.75v-.75z" />
                                        </svg>
                                        @entry.Project.Code
                                    </p>
                                    <p class="mt-0 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                                        </svg>
                                        @entry.ReviewDate
                                    </p>
                                </div>
                                <div class="flex items-center text-sm text-gray-500 sm:mt-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                      <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    <p>
                                        @entry.Hours
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </li>
        }
    </ul>

</div>

